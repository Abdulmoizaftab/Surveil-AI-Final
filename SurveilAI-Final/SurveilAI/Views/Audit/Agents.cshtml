        var message = $("#emessage").val();
        var array = [];
        var rows = $("#tbl tbody tr");
        var isAll = $("#tbl").attr("data-is-all");

        $.each(rows, function (index, row) {
            if (index > 0)
            {
                var columns = $(row).find("td");
                array[--index] = columns[0].innerHTML;
            }
        });

        $.ajax({
            url: "@Url.Action("SendEmail", "Audit")",
            data: { to: to, mt_subject: subject, mailtext: message, cat: 2, table: array, isAll:isAll },
            type: "Post",
