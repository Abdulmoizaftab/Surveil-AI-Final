@model IISWebApp.Models.Main.job
@{
    ViewBag.Title = "Job Execution";
    List<object> UserRights = new List<object>();
    UserRights = Session["UserRole"] as List<object>;
}



<style>
    #JobTable tr:hover.selected td,
    #JobTable tbody tr:hover td {
        background-color: #8783ee;
        cursor: pointer;
    }

    #JobTable tbody tr.selected td {
        background-color: #8783ee;
    }
</style>
<div class="content-wrapper" id="JobExec">
    <div class="content container-fluid">
        <header class="page-header">
            <div class="mr-auto">
                <h1 class="separator">INNOMATE</h1>
                <nav class="breadcrumb-wrapper" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)"><i class="icon dripicons-clock"></i></a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0)">@TempData["DeviD"]</a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0)"> Job Execution</a></li>

                    </ol>
                </nav>
            </div>
        </header>
        <section class="page-content">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="row card-header">
                            <div class="col-md-4"><h5 class="">Job Execution</h5></div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4 text-end">
                                <small class="text-success" style="display: none;" id="job-response-ok"></small>
                                <small class="text-danger" style="display: none;" id="job-response-issue"></small>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="alert alert-info alert-outline col-md-10 offset-md-1" role="alert">
                                Select Job from the table to execute it on selected device.
                            </div>
                            <div class="row">
                                <div class="col-md-2 offset-md-1">
                                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                                        <a class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Jobs</a>
                                        <a class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Job Result</a>

                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                            <div class="row">
                                                <div class="col-md-10" style="overflow: auto;
    max-height: 600px;">
                                                    <table class="table table-bordered" id="JobTable">
                                                        <thead>
                                                            <tr>
                                                                @*<td>JOBS</td>*@

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model.Jobs.OrderBy(x => x.jobid).Select(x => x.jobid).Distinct())
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        <span id="vals">@Html.DisplayFor(modelItem => item)</span>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>

                                                </div>
                                                <div class="col-md-2">
                                                    <button style="margin-bottom:5px" class="btn btn-primary d-block col-12" onclick="window.location.reload();">Refresh</button>
                                                    @if (UserRights.Contains("122"))
                                                    {<button id="BtnExecute" disabled style="margin-bottom:5px" class="btn btn-primary d-block col-12" onclick="RunJob()">Execute Job</button>}
                                                        <input id="JobName" type="text" hidden />
                                                        <input id="DevId" type="text" hidden value="@TempData["DeviD"]" />
                                                    </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">

                                            <div id="JobResult">
                                                <div id="bs4-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                                                    <div class="row">

                                                        <div class="col-sm-12 col-md-12">

                                                            <div class="col-sm-12">
                                                                <table id="bs4-table" class="table table-striped table-bordered dataTable table-responsive" style="width:100%" role="grid" aria-describedby="bs4-table_info">
                                                                    <thead>
                                                                        <tr role="row">

                                                                            <th style="display:none"></th>
                                                                            <th class="sorting" tabindex="0" aria-controls="bs4-table" rowspan="1" colspan="1" aria-label="Name: activate to sort column descending" style="width: 189px;">Job ID</th>
                                                                            <th class="sorting" tabindex="0" aria-controls="bs4-table" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 307px;">Resource ID</th>
                                                                            <th class="sorting" tabindex="0" aria-controls="bs4-table" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 141px;">Command No</th>
                                                                            <th class="sorting" tabindex="0" aria-controls="bs4-table" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 61px;">Timestamp</th>
                                                                            <th class="sorting" tabindex="0" aria-controls="bs4-table" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 126px;">Response</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var item in Model.JRData)
                                                                        {
                                                                            <tr role="row" class="even">
                                                                                <td style="display:none"></td>
                                                                                <td><span id="vals">@Html.DisplayFor(modelItem => item.jobid)</span></td>
                                                                                <td><span>@Html.DisplayFor(modelItem => item.resourceid)</span></td>
                                                                                <td><span>@Html.DisplayFor(modelItem => item.commandno)</span></td>
                                                                                <td><span>@Html.DisplayFor(modelItem => item.timestamp)</span></td>
                                                                                <td><span>@Html.DisplayFor(modelItem => item.errorspec)</span></td>
                                                                            </tr>
                                                                        }

                                                                    </tbody>
                                                                    <tfoot>
                                                                        @*<tr><th rowspan="1" colspan="1">Name</th><th rowspan="1" colspan="1">Position</th><th rowspan="1" colspan="1">Office</th><th rowspan="1" colspan="1">Age</th><th rowspan="1" colspan="1">Start date</th>
                                                                            </tr>*@
                                                                    </tfoot>
                                                                </table>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div style="display:none" id="loading" class="preloader pl-xl pls-primary">
    <svg class="pl-circular" viewBox="25 25 50 50" style="height: 100px;">
        <circle class="plc-path" cx="50" cy="50" r="20"></circle>
    </svg>
</div>
<script>


    function RunJob() {
         $('#job-response-ok').hide();
         $('#job-response-issue').hide();
        var Jname = $("#JobName").val();
         var Did = $("#DevId").val();
         $("#loading").show();
        $.ajax({
            url: "@Url.Action("JobExecuteDevice", "Schedule")",
            data: { id: Did, Jobname: Jname },
            type: "POST",
            dataType: "json",
            success: function (data) {
                if (data == "Job execution started") {
                    $('#job-response-ok').text(data);
                    $('#job-response-ok').show();
                }
                else {
                     $('#job-response-issue').text(data);
                     $('#job-response-issue').show();
                }
                
                document.getElementById("BtnExecute").disabled = true;

            },
            error: function (data) {
                document.getElementById("BtnExecute").disabled = true;
            },
            complete: function (data) {
                $("#loading").hide();
            }
        })
    };

    $("table").on("click", "tr", function (e) {
        $(this)
            .toggleClass("selected")
            .siblings(".selected")
            .removeClass("selected");
        $("#JobName").val($(this).find("td:first span").text());
        document.getElementById("BtnExecute").disabled = false;
    });
</script>
