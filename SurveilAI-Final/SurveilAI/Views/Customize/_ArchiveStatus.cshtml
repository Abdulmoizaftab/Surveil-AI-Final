@model SurveilAI.Models.Archive
<div class="row">
    <div class="col-md-12 text-right">
        @if (Model.Msg == "Archive policy not updated!")
        {
            <label class="text-danger">@Model.Msg</label>
        }
        else
        {
            <label class="text-success">@Model.Msg</label>
        }

    </div>
</div>
<h5>sadsadsadasdsadsad</h5>
<div id="archive-status-tbl" class="d-none ">
    <table id="bs4-table" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Rows</th>
                <th>Reserved</th>
                <th>Data</th>
                <th>Index Size</th>
                <th>Unused</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.tableArchives)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.rows)</td>
                    <td>@Html.DisplayFor(modelItem => item.reserved)</td>
                    <td>@Html.DisplayFor(modelItem => item.data)</td>
                    <td>@Html.DisplayFor(modelItem => item.index_size)</td>
                    <td>@Html.DisplayFor(modelItem => item.unused)</td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div id="archive-tbl" class="">
    <table id="bs4-table1" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>No Of Days</th>
                <th>Size</th>
                <th>Archive Policy</th>
                <th>Purge Policy</th>
                <th>By Days</th>
                <th>By Size</th>
                <th>Active</th>
                <th>Archived Till</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Archives)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Archive1)</td>
                    <td>@Html.DisplayFor(modelItem => item.NoOfDays)</td>
                    <td>@Html.DisplayFor(modelItem => item.Size)</td>
                    <td>@Html.DisplayFor(modelItem => item.ArchivePolicy)</td>
                    <td>@Html.DisplayFor(modelItem => item.PurgePolicy)</td>
                    <td>@Html.DisplayFor(modelItem => item.ByDays)</td>
                    <td>@Html.DisplayFor(modelItem => item.BySize)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>@Html.DisplayFor(modelItem => item.ArchivedTill)</td>
                    <td><a href="#" class="btn-edit-arc">Edit</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script src="~/assets/js/global/ForArchive.js"></script>
<script>

    $(document).ready(function () {
        $('#bs4-table').DataTable();
        $('#bs4-table1').DataTable();

    });

</script>
