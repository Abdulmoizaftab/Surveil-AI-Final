            var uri = 'data:text/csv;charset=utf-8,' + str;
            var downloadLink = document.createElement("a");
            downloadLink.href = uri;
            downloadLink.download = "Agents.xls";

            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
        }
    }

    $('#bs4-tbody tr').click(function() {

        $("#bs4-tbody tr").removeClass("highlight");
        var selected = $(this).hasClass("highlight");

        if (!selected) {
            $(this).addClass("highlight");
            disableBtn(false);
        }

    });

    $("#send_all").click(function() {
        displayRows(true);
    });

    $("#send_select").click(function() {
        displayRows(false);
    });

    function displayRows(all) {
        var table = getRows(all);
        $("#show_table").empty();
        $("#show_table").append("<table id='tbl' data-is-all='"+all+"'>" + table.innerHTML + "</table>");
    }



</script>

